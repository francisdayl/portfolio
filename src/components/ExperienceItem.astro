---


const { company, role, date, activities , isCurrent=false} = Astro.props;
---

<li class="mb-10 ms-6">
    <span class="absolute flex items-center justify-center size-6 bg-blue-300 rounded-full -start-3  dark:ring-gray-900 dark:bg-blue-800"></span>
    <h3 class="flex items-center mb-1 text-lg font-semibold">
        <span>{role} - {company}</span>
        {
            isCurrent &&
            (<span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3">
                Current
            </span>)
        }  
        
    </h3>
    <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
        >{date}
    </time>
        <ul class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 flex flex-col gap-2">
            {
                activities.map((activity)=>(
                    <li class="text-pretty list-disc ml-1">
                        {activity.description}  {activity.technologies && (<strong> 
                            ({activity.technologies.join(", ")})
                        </strong>)} 
                    </li>
                ))
            }
        </ul>
</li>
