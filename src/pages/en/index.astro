---
import SectionContainer from "../../components/SectionContainer.astro";
import AboutMe from "../../components/sections/AboutMe.astro";
import Courses from "../../components/sections/Courses.astro";
import Experience from "../../components/sections/Experience.astro";
import Projects from "../../components/sections/Projects.astro";
import Layout from "../../layouts/Layout.astro";
import SkillsSection from '../../components/sections/Skills.astro';
import {translatedEnglishContent} from '../../../public/locales/en/translations'
import { experience } from "../../../public/locales/en/experience";
import { englishSkills } from "../../../public/locales/en/skills";
import { englishProjects } from "../../../public/locales/en/projects";

const englishContext = translatedEnglishContent;
const englishExperience = experience;
const englishSkillSet = englishSkills;


---


